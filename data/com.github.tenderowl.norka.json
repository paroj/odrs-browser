[{"app_id": "com.github.tenderowl.norka", "date_created": 1593802038.0, "description": "I like that the app is simple but really useful", "distro": "Fedora", "karma_down": 0, "karma_up": 7, "locale": "en_GB.UTF-8", "rating": 100, "reported": 0, "review_id": 241624, "score": 4, "summary": "Simple and useful", "user_display": "Esteban Pertuz", "version": "0.2.0"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1605802440.0, "description": "This application is amazing, it has a live preview, great spelling correction & a time to read. \nYou can export your markup directly to html if you like, the autosave is fantastic,... It intergrates beautifully into the gnome desktop.\n\nAn option to turn off the read time function would be appreciated", "distro": "Fedora", "karma_down": 0, "karma_up": 0, "locale": "en_US.UTF-8", "rating": 100, "reported": 0, "review_id": 305688, "score": 0, "summary": "Just fantastic, highly recommend", "user_display": "Cedric Hannecart", "version": "0.6.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1626584933.0, "description": "I use Norka at work for outgoing messages especially those that will be cut and pasted for future use. \n\nWhen writing a short script or audio project, I like how swift Norka is to launch, and how all previous notes are in one common place. Recommended.", "distro": "Ubuntu", "karma_down": 0, "karma_up": 0, "locale": "en_CA.UTF-8", "rating": 100, "reported": 0, "review_id": 400245, "score": 0, "summary": "Excellent for notes and quick projects", "user_display": "Aaron Myradon", "version": "0.7.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1629541108.0, "description": "simple, but very useful", "distro": "Arch Linux", "karma_down": 0, "karma_up": 0, "locale": "en_US.UTF-8", "rating": 100, "reported": 0, "review_id": 411738, "score": 0, "summary": "nice app, can recommend", "user_display": "jpriv", "version": "0.7.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1630538630.0, "description": "Really versatile, it saves the document with any change within itself and if your want you can export it as text format or even convert it to HTML - you got to take my word on this because I haven't tested this feature. It allows changing the display and they are really lovely plus it does an automatic indentation. The only \"issue\" I see is that it doesn't allow font change... this might be done through the system's fonts.", "distro": "Ubuntu", "karma_down": 0, "karma_up": 0, "locale": "en_US.UTF-8", "rating": 100, "reported": 0, "review_id": 415886, "score": 0, "summary": "Lovely little app!", "user_display": "Mushishi", "version": "0.7.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1634147174.0, "description": "It looks pretty small on my screen.", "distro": "Fedora", "karma_down": 0, "karma_up": 0, "locale": "en_US.UTF-8", "rating": 100, "reported": 0, "review_id": 428774, "score": 0, "summary": "Option to resize the editor font", "user_display": "Murat T.", "version": "0.8.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1634810905.0, "description": "A lightweight markdown editor", "distro": "Ubuntu", "karma_down": 0, "karma_up": 0, "locale": "en_US.UTF-8", "rating": 100, "reported": 0, "review_id": 431038, "score": 0, "summary": "love it", "user_display": "mint", "version": "0.8.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1635271149.0, "description": "The UI is clunky", "distro": "Debian GNU/Linux", "karma_down": 0, "karma_up": 0, "locale": "en_US.UTF-8", "rating": 40, "reported": 0, "review_id": 432655, "score": 0, "summary": "Innovative but clunky", "user_display": "Alan Welsh", "version": "0.8.2"}, {"app_id": "com.github.tenderowl.norka", "date_created": 1717234870.0, "description": "\u754c\u9762\u7f8e\u89c2\uff0c\u4f46\u9884\u89c8md\u65f6\u65e0\u6cd5\u8df3\u8f6c\u94fe\u63a5", "distro": "Ubuntu", "karma_down": 0, "karma_up": 0, "locale": "zh_CN.UTF-8", "rating": 80, "reported": 0, "review_